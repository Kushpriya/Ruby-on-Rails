<div class="post-container" >
  <p>
    <strong>Title:</strong>
    <%= post.title %>

  </p>

  <p>
  <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
  <strong>Keywords:</strong>
    <%= post.keywords %>
  </p>

  <a>
  <%= link_to "Show this post", post ,class:"post-link" %>
  </a>

  <% post.images.each do |image| %>
    <%= image_tag(image, style:"object-fit:cover; width: 200px; height: 200px;") %>
    <% end %>
</div>
